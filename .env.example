# New Relic ProcessSample Optimization Lab - Configuration
# Copy to .env and update with your credentials

# Required: New Relic Credentials
NEW_RELIC_LICENSE_KEY=your_license_key_here
NEW_RELIC_API_KEY=your_api_key_here
NR_ACCOUNT_ID=your_account_id_here

# Optional: ProcessSample Configuration
FILTER_TYPE=standard    # none, standard, aggressive, targeted
SAMPLE_RATE=60          # In seconds: 20 (default NR), 60 (recommended), 120 (max savings)
COLLECT_CMDLINE=false   # Whether to collect command line arguments

# Optional: OpenTelemetry Configuration
INTERVAL=10s            # OTel collection interval: 5s, 10s, 20s, 30s
ENABLE_DOCKER_STATS=false  # Set to true to collect Docker container metrics

# Optional: Load Generator Settings
STRESS_CPU=2            # CPU cores to stress
STRESS_MEM=128M         # Memory to allocate (e.g., 128M, 1G)
STRESS_IO=0             # IO workers (0 to disable)

# Optional: Resource Limits
INFRA_MEMORY=512M       # Memory limit for infrastructure agent
OTEL_MEMORY=512M        # Memory limit for OpenTelemetry collector

# (security/minimal-mount options removed in v1.3)
VERBOSE=1               # Logging verbosity (0-3)
