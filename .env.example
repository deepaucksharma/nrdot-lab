# ---------------------------------------------------------------------------
# New Relic ProcessSample Optimization Lab - Environment Configuration
# Copy to .env and update with your credentials and preferences
# ---------------------------------------------------------------------------

# New Relic Credentials
# ---------------------------------------------------------------------------
# New Relic ingest license key â€“ 40-character hex string
NEW_RELIC_LICENSE_KEY=

# New Relic User API key (required for validation and visualization)
NEW_RELIC_API_KEY=

# New Relic numeric account ID
NR_ACCOUNT_ID=

# Infrastructure Agent Configuration
# ---------------------------------------------------------------------------
# Process sample rate in seconds (default: 60)
SAMPLE_RATE=60

# Process filtering strategy (none, standard, aggressive, targeted)
FILTER_TYPE=standard

# Whether to collect command line arguments (true/false)
COLLECT_CMDLINE=false

# OpenTelemetry Configuration
# ---------------------------------------------------------------------------
# OTel collection interval in seconds (default: 10s)
OTEL_INTERVAL=10s

# OTel configuration variant (config, docker)
OTEL_CONFIG=config

# Load Generator Configuration
# ---------------------------------------------------------------------------
# CPU load (number of stress CPU workers)
STRESS_CPU=2

# Memory load (e.g., 128M, 1G, 50%)
STRESS_MEM=128M

# I/O load (number of I/O workers, 0 to disable)
STRESS_IO=0

# Resource Limits
# ---------------------------------------------------------------------------
# Infrastructure agent memory limit
INFRA_MEMORY=512M

# OpenTelemetry collector memory limit
OTEL_MEMORY=512M

# Load generator CPU limit
LOAD_CPUS=1.5

# Load generator memory limit
LOAD_MEMORY=512M

# Security & Mounts
# ---------------------------------------------------------------------------
# Enable seccomp profiles (true/false)
SECURE_MODE=true

# Minimal mounts mode (set empty string to enable)
# MIN_MOUNTS=

# Docker stats collection (set to true to enable)
# ENABLE_DOCKER_STATS=true

# Logging & Debug
# ---------------------------------------------------------------------------
# Verbose logging level (0-3)
VERBOSE=1
