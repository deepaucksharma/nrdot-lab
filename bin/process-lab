#!/usr/bin/env python3
"""
ProcessSample Optimization Lab - Main Entry Point
"""

import os
import sys
from pathlib import Path

# Add the scripts directory to the path
SCRIPT_DIR = Path(__file__).resolve().parent
REPO_ROOT = SCRIPT_DIR.parent
UNIFIED_SCRIPT = REPO_ROOT / "scripts" / "unified" / "process_lab.py"

if __name__ == "__main__":
    # Execute the main script with any provided arguments
    sys.exit(os.system(f"{sys.executable} {UNIFIED_SCRIPT} {' '.join(sys.argv[1:])}"))
